<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gqfly.mybatis.conf.mapper.BlogMapper">

    <resultMap id="BaseResultMap" type="com.gqfly.mybatis.conf.entity.Blog">
        <id property="id" column="id" />
        <result property="author" column="author" />
        <result property="title" column="title" />
        <result property="details" column="details" />
    </resultMap>

    <sql id="Base_Column_List">
        id,
        author,
        title,
        details
    </sql>

    <select id="selectById" resultType="com.gqfly.mybatis.conf.entity.Blog">
        select * from ms_blog where id = #{id}
    </select>
</mapper>
